<section
    class="container w-25 h-100 d-flex justify-content-center align-items-center"
>
    <main class="w-100">
        <div class="card bg-body-secondary">
            <div class="card-body">
                <h2 class="card-title text-center">Login</h2>
                <form action="/auth/login" method="post">
                    {{> 'partials/components/Input' label='Email Address' type="email" name="email"}}
                    {{> 'partials/components/Input' label='Password' type="password" name="password"}}
                    <div class="mb-3 form-check">
                        <input
                            type="checkbox"
                            class="form-check-input"
                            id="exampleCheck1"
                        />
                        <label class="form-check-label" for="exampleCheck1">
                            Remember Me!
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">
                        Login
                    </button>
                    <div class="mt-3">
                        <a href="/auth/signup">Sign Up!</a>
                    </div>
                </form>
            </div>
        </div>
    </main>
</section>